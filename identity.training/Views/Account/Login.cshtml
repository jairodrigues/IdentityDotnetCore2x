@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Utilize uma conta para realizar o login</h4>
            <hr />

            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group">
                <lable asp-for="Email"></lable>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <lable asp-for="Password"></lable>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Remember">
                        <input asp-for="Remember" />
                        @Html.DisplayNameFor(x => x.Remember)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-default" type="submit">Registrar</button>
            </div>
        </form>
    </div>
</div>

